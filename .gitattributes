#第一课：程序员的一人饮酒醉
number1 = 1
number2 = 2
unit1 = '人'
unit2 = '眼'
line1 = '我编程累'
line2 = '是bug相随'
sentence1 = '碎掉的节操满地堆'
sentence2 = '我只求今日能早归'
#打印两句话：1人我编程累碎掉的节操满地堆
print('1'+unit1+line1+sentence1)
#打印两句话：2眼是bug相随我只求今日能早归
print(str(number2)+unit2+line2+sentence2)

